<%include partials/header.ejs%>
<div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Write Prescription</h5>
            
            <form class="form-signin" action="/prescup" method="post">
              
              <div class="form-label-group">
                <input name="valdyt" type="date" id="inputEmail" class="form-control" placeholder="Validity" required>
                <label for="inputEmail">Valid Till</label>
              </div>
              <div class="form-label-group">
                <input name="patid" type="text" id="inputEmail" class="form-control" placeholder="Patient ID" required>
                <label for="inputEmail">Patient ID</label>
              </div>
              <div class="form-label-group">
                <input name="docid" type="text" id="inputEmail" class="form-control" placeholder="Doctor ID" required>
                <label for="inputEmail">Doctor ID</label>
              </div>
              <div class="form-label-group">
                <input name="medicine" type="text" id="inputEmail" class="form-control" placeholder="Medicine" required>
                <label for="inputEmail">Name of Medicine: mor,aft,eve;</label>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
        </form>
    </div>
<%include partials/footer.ejs%>
